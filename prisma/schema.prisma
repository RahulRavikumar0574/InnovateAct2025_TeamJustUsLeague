// Prisma schema for worker safety dashboard
// This defines User, SOSAlert, and ActivityLog models

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(WORKER)
  sosAlerts SOSAlert[]
  activityLogs ActivityLog[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  SUPERVISOR
  WORKER
}

model SOSAlert {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  message     String
  status      SOSStatus @default(PENDING)
  createdAt   DateTime @default(now())
  resolvedAt  DateTime?
}

enum SOSStatus {
  PENDING
  RESOLVED
}

model ActivityLog {
  id        Int      @id @default(autoincrement())
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  action    String
  createdAt DateTime @default(now())
}
